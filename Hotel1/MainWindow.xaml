<Window x:Class="Hotel1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button x:Name="AddRoomButton" Width="150" Height="30" Click="AddRoomButton_Click">
                Добавить номер
            </Button>
            <Button x:Name="OrderClient" Width="150" Height="30" Click="OrderClient_Click">
                Оформить клиента
            </Button>
            <Button x:Name="NumbersOtchet" Width="150" Height="30" Click="NumbersOtchet_Click">
                Отчет по номерам
            </Button>
            <Button x:Name="PersonsLive" Width="150" Height="30" Click="PersonsLive_Click">
                Отчет по проживающих
            </Button>
        </StackPanel>
        <Button x:Name="Exit" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="30,0,0,50" Click="Exit_Click">Выход</Button>
    </Grid>
</Window>
