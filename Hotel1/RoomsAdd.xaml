<Window x:Class="Hotel1.RoomsAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel1"
        mc:Ignorable="d"
        Title="RoomsAdd" Height="450" Width="500">
    <Grid>
        <Label VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,50,0,0">Добавить комнату</Label>
        <Label Height="24" Width="140" Content="Номер комнаты" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,200,280"/>
        <TextBox Name="Number" PreviewTextInput="NumberValidationTextBox" Width="150" Height="25" Margin="0,70,200,250"/>

        <Label Height="24" Width="140" Content="Цена комнаты" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="150,40,0,280"/>
        <TextBox Name="Price" PreviewTextInput="NumberValidationTextBox" Width="150" Height="25" Margin="180,70,0,250"/>

        <Button x:Name="Add" Width="120" Height="25" Margin="00,100,0,170" Click="Add_Click">Создать</Button>
    </Grid>
</Window>
